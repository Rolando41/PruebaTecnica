@{
}




<div>
    <hr />
    <h3> Nuestros Servicios</h3>
    <hr />
    <table class="table">
        <thead>
            <tr><th scope="col">Servicio</th>
                <th scope="col">Monto</th>
                <th scope="col">Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.list)
            {
                <tr>
                    <td>@item.Descripcion</td>
                    <td>@item.Monto</td>
                    <td><a class="btn btn-primary" asp-action="EditarServicios" asp-controller="Home" asp-route-id="@item.ID_Servicio" asp-route-descripcion="@item.Descripcion" asp-route-monto="@item.Monto">Editar</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-success form-control"> Volver</a>
</div>
